<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black_40"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_24"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/size_4"
        app:cardElevation="@dimen/size_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_36"
            android:background="@drawable/layout_round"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_24"
            android:paddingTop="@dimen/size_24">

            <ProgressBar
                android:id="@+id/progressView"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="@dimen/size_36"
                android:layout_height="@dimen/size_36"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="@dimen/size_24"
                android:paddingRight="@dimen/size_24"
                android:text="@string/layout_please_wait"
                android:textColor="@color/black_75"
                android:textSize="@dimen/font_13" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


