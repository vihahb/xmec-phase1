<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:textColor="@color/black_85"
        android:textSize="@dimen/font_16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ln_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@mipmap/ic_hospital_address" />

        <TextView
            android:id="@+id/tv_hospital_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:textColor="@color/black_75" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@mipmap/ic_hospital_phone" />

        <TextView
            android:id="@+id/tv_hospital_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:textColor="@color/black_75" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@mipmap/ic_hospital_site" />

        <TextView
            android:id="@+id/tv_hospital_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:textColor="@color/black_75" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_gravity="top"
            android:src="@mipmap/ic_hospital_working_time" />

        <TextView
            android:id="@+id/tv_hospital_time_working"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:text="Giờ làm việc"
            android:textColor="@color/black_75" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@mipmap/ic_hospital_rate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:text="Đánh giá: "
            android:textColor="@color/black_75" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:isIndicator="true"
            android:id="@+id/rt_hospital_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginStart="@dimen/size_8"
            app:mrb_progressTint="@color/colorPrimaryDark"
            app:mrb_secondaryProgressTint="@color/colorPrimaryDark"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@mipmap/ic_hospital_summary" />

        <TextView
            android:id="@+id/tv_hospital_sumary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16"
            android:textColor="@color/black_75" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/tv_hospital_sumary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:textColor="@color/black_75"
            android:maxLines="3"
            android:ellipsize="end"
            app:animation_duration="350"
            android:layout_marginLeft="@dimen/size_56"
            android:layout_marginStart="@dimen/size_56"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"/>


        <LinearLayout
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginTop="@dimen/size_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">
            <ImageView
                android:id="@+id/img_action_expand"
                android:src="@drawable/ic_action_down"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24" />
            <TextView
                android:id="@+id/tv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mở rộng"
                android:textColor="@color/black_60"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>