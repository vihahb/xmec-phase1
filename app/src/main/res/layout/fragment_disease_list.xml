<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.xtelsolution.xmec.view.fragment.diseases.DiseaseListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_toolbar"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_8">

            <EditText
                android:id="@+id/edt_Search_Disease"
                style="@style/TextVIew.black.14"
                android:layout_height="@dimen/size_36"
                android:background="@drawable/round_background_default"
                android:drawableLeft="@drawable/ic_action_search"
                android:drawableStart="@drawable/ic_action_search"
                android:hint="@string/layout_search_disease_edt"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingEnd="@dimen/size_40"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_40"
                android:paddingStart="@dimen/size_8"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/action_clear"
                android:layout_width="@dimen/size_36"
                android:layout_height="@dimen/size_36"
                android:layout_gravity="right"
                android:padding="@dimen/size_4"
                android:src="@drawable/ic_action_name"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/disease_searched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginTop="@dimen/size_16"
                android:text="@string/layout_search_disease"
                android:textColor="@color/black_100"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_recent_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginTop="@dimen/size_16"
                android:text="@string/layout_search_disease_recent"
                android:textColor="@color/black_100"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_recent_disease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_search_disease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_14" />

            <!--<ProgressBar-->
            <!--android:id="@+id/progressBar"-->
            <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/size_8"-->
            <!--android:indeterminate="true"-->
            <!--android:theme="@style/Box_Blue"-->
            <!--android:visibility="invisible" />-->
        </LinearLayout>
        <include layout="@layout/include_warning" />
    </FrameLayout>
</LinearLayout>
