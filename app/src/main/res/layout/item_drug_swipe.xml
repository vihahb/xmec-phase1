<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/swipeLayout"
    app:right_swipe_enabled="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_8">

        <ImageView
            android:id="@+id/img_search_drug"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:src="@mipmap/ic_search_drug" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginStart="@dimen/size_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_drug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black_75"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhóm thuốc: "
                    android:textColor="@color/black_55"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_group_drug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black_55"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0_5"
                android:background="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/size_56"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/font_15"
        android:textColor="@android:color/white"
        app:bring_to_clamp="150dp"
        app:gravity="right"
        app:sticky="100dp"
        android:background="@color/background_color"
        android:text="Xóa"/>
</ru.rambler.libs.swipe_layout.SwipeLayout>