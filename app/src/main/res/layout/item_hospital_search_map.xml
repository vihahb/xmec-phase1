<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white_100"
    app:cardCornerRadius="@dimen/size_4"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_hospital"
                android:layout_width="80dp"
                android:layout_height="@dimen/size_80"
                android:background="@color/background_default"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_margin="@dimen/size_4"
                android:background="@drawable/bg_circle_blue"
                android:padding="@dimen/size_4"
                android:text="123 Km"
                android:textColor="@color/white_100" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/size_8">

            <TextView
                android:id="@+id/name_hospital"
                style="@style/TextVIew.black.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:text="Tên cơ sở y tế "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_hospital"
                style="@style/TextVIew.black.13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:text="Chuyên khoa: " />

            <TextView
                android:id="@+id/address_hospital"
                style="@style/TextVIew.black.13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:text="Địa chỉ \n" />


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>