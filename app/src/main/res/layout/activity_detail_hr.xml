<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    tools:context="com.xtelsolution.xmec.view.activity.detailhr.DetailHrActivity">

    <include
        android:id="@+id/layout_1"
        layout="@layout/toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tablayout"
        android:layout_below="@+id/layout_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_2"
        android:layout_above="@+id/tablayout"
        android:background="@drawable/shadow_bottom_to_top" />

    <android.support.design.widget.TabLayout
        style="@style/Tablayout_ItemText"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_alignParentBottom="true"
        app:tabGravity="fill"
        app:tabIndicatorHeight="@dimen/size_0"
        app:tabMaxWidth="@dimen/size_0"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/text_blue"
        app:tabTextAppearance="?android:attr/textAppearanceSmall"
        app:tabTextColor="@color/black_55" />
</RelativeLayout>