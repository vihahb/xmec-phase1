<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_8"
    android:paddingEnd="@dimen/size_8"
    android:paddingLeft="@dimen/size_8"
    android:paddingRight="@dimen/size_8"
    android:paddingStart="@dimen/size_8"
    android:paddingTop="@dimen/size_14">

    <TextView
        android:id="@+id/txt_title"
        style="@style/TextVIew.black.13"
        android:padding="@dimen/size_0"
        android:textColor="@color/black_100"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_content"
        style="@style/TextVIew.black.16"
        android:drawableEnd="@mipmap/ic_spinner_black_14"
        android:drawableRight="@mipmap/ic_spinner_black_14"
        android:paddingBottom="@dimen/size_7"
        android:paddingTop="@dimen/size_5"
        android:text="@string/app_name" />
</LinearLayout>