<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_100"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context="com.xtelsolution.xmec.view.activity.schedule.AddDrugScheduleActivity">

    <TextView
        android:id="@+id/txt_title"
        style="@style/TextVIew.white.16"
        android:background="@drawable/background_dialog_title"
        android:gravity="center"
        android:paddingBottom="@dimen/size_16"
        android:paddingTop="@dimen/size_16"
        android:text="@string/layout_create_drug" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_16">

        <Spinner
            android:id="@+id/spinner_drug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_4"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_4"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_8"
                android:paddingEnd="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:paddingStart="@dimen/size_8"
                android:paddingTop="@dimen/size_14">

                <TextView
                    style="@style/TextVIew.black.13"
                    android:padding="@dimen/size_0"
                    android:text="Liều lượng"
                    android:textColor="@color/black_100"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_amount"
                    style="@style/EditText.Black"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingTop="@dimen/size_5" />
            </LinearLayout>

            <!--<android.support.design.widget.TextInputLayout-->
            <!--style="@style/TextInputLayout.Black"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="@dimen/size_8"-->
            <!--android:layout_marginEnd="@dimen/size_8"-->
            <!--android:layout_marginLeft="@dimen/size_8"-->
            <!--android:layout_marginRight="@dimen/size_8"-->
            <!--android:layout_marginStart="@dimen/size_8"-->
            <!--android:layout_marginTop="@dimen/size_16"-->
            <!--android:textColorHint="@color/black_100"-->
            <!--app:hintTextAppearance="@style/TextLabel">-->

            <!--<android.support.design.widget.TextInputEditText-->
            <!--android:id="@+id/edt_amount"-->
            <!--style="@style/EditText.Black"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:hint="Liều lượng"-->
            <!--android:inputType="number" />-->
            <!--</android.support.design.widget.TextInputLayout>-->
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginStart="@dimen/size_4"
            android:layout_marginTop="@dimen/size_8"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spinner_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/login_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:background="@color/login_dialog_background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Button.black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/layout_disease_cancel" />

        <View
            android:layout_width="@dimen/size_0_5"
            android:layout_height="match_parent"
            android:background="@color/login_text" />

        <Button
            android:id="@+id/btn_add"
            style="@style/Button.blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/layout_ok" />
    </LinearLayout>
</LinearLayout>