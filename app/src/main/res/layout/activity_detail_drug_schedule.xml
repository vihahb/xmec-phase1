<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_100"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context="com.xtelsolution.xmec.view.activity.schedule.AddDrugScheduleActivity">

    <TextView
        style="@style/TextVIew.white.16"
        android:background="@drawable/background_dialog_title"
        android:gravity="center"
        android:paddingBottom="@dimen/size_16"
        android:paddingTop="@dimen/size_24"
        android:text="CHI TIẾT THUỐC" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_16"
        android:clickable="true"
        android:focusable="true">

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayout.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_16"
            android:textColorHint="@color/black_100"
            app:hintTextAppearance="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_name"
                style="@style/EditText.Black.Disable"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Tên thuốc"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_4"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_4"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputLayout.Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginTop="@dimen/size_16"
                android:textColorHint="@color/black_100"
                app:hintTextAppearance="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_amount"
                    style="@style/EditText.Black.Disable"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Liều lượng"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginStart="@dimen/size_4"
            android:layout_marginTop="@dimen/size_8"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <android.support.design.widget.TextInputLayout
                style="@style/TextInputLayout.Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_8"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginTop="@dimen/size_16"
                android:textColorHint="@color/black_100"
                app:hintTextAppearance="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_unit"
                    style="@style/EditText.Black.Disable"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Đơn vị"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/login_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:background="@color/login_dialog_background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Button.black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:text="Đóng" />
    </LinearLayout>
</LinearLayout>