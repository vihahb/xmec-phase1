<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_170"
    android:background="@drawable/background_navigation_header"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/size_16"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@mipmap/im_diem_tam_do" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/layout_1"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:background="@drawable/outline_circle_white_0_5">

                <com.xtelsolution.xmec.view.widget.RoundImage
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/size_4"
                    android:contentDescription="@null"
                    android:src="@mipmap/im_docter" />

                <ImageButton
                    android:id="@+id/img_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end|right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_edit_24" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginRight="@dimen/size_16"
                    android:layout_gravity="center_vertical|right"
                    android:id="@+id/tv_action_login"
                    style="@style/TextVIew.white.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round_login"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_8"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:text="Đăng nhập"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_username"
            style="@style/TextVIew.white.20"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_8"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/img_qr"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="right|end"
        android:layout_margin="@dimen/size_16"
        android:background="@drawable/button_qr"
        android:contentDescription="@null"
        android:visibility="invisible" />
</FrameLayout>