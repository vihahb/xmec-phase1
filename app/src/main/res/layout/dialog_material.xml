<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_24"
    app:cardElevation="@dimen/size_4"
    app:cardCornerRadius="@dimen/size_4"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_24"
            android:layout_marginRight="@dimen/size_24"
            android:layout_marginTop="@dimen/size_24"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/dialog_txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_24"
            android:textColor="#757575" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            android:gravity="right|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_negative"
                style="@style/Button.blue"
                android:layout_marginEnd="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/layout_disagree" />

            <Button
                android:id="@+id/dialog_btn_positive"
                style="@style/Button.blue"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/layout_agree" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>