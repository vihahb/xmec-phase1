<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/black_40">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/black_75"
            app:cardElevation="@dimen/size_8"
            app:cardUseCompatPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_36"
            app:cardCornerRadius="@dimen/size_5">
            <LinearLayout
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_24"
                android:paddingTop="@dimen/size_24">

                <ProgressBar
                    android:id="@+id/progressView"
                    style="?android:attr/indeterminateProgressStyle"
                    android:theme="@style/Box_Blue"
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:indeterminate="true"/>

                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/size_24"
                    android:paddingRight="@dimen/size_24"
                    android:text="@string/loading"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>
