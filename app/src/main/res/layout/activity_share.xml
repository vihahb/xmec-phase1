<?xml version="1.0" encoding="utf-8"?>
<com.xtelsolution.xmec.view.widget.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.xtelsolution.xmec.view.activity.share.ShareActivity">
    <android.support.v7.widget.CardView
        android:background="@drawable/round_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        app:cardCornerRadius="@dimen/size_8"
        app:cardElevation="@dimen/size_4">

        <LinearLayout
            android:background="@color/white_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:tabIndicatorColor="@color/login_tabcolor"
                app:tabIndicatorHeight="@dimen/size_2"
                app:tabSelectedTextColor="@color/login_tabcolor"
                app:tabTextAppearance="@style/Tablayout_TitleText"
                app:tabTextColor="@color/login_tabcolor" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0_5"
                android:background="@color/login_text" />
            <xyz.santeri.wvp.WrappingViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </xyz.santeri.wvp.WrappingViewPager>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.xtelsolution.xmec.view.widget.CustomScrollView>
