<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_time"
        style="@style/TextVIew.black.13"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_32"
        android:textColor="@color/black_55"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginStart="@dimen/size_16"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view_1"
            android:layout_width="@dimen/size_0_5"
            android:layout_height="@dimen/size_16"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_blue" />

        <ImageView
            android:id="@+id/img_drug"
            android:layout_width="@dimen/size_32"
            android:layout_height="@dimen/size_32"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_drug_schedule_blue__36" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_count"
        style="@style/TextVIew.black.16"
        android:layout_width="186dp"
        android:layout_height="@dimen/size_32"
        android:layout_weight="1"
        android:textIsSelectable="true" />

    <ImageButton
        android:id="@+id/img_edit"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_32"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_schedule_edit_black_18" />
</LinearLayout>