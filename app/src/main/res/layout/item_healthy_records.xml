<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_16"
        android:paddingTop="@dimen/size_16">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginStart="@dimen/size_16"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_hr_not_noti_36" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextVIew.blue.16"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txt_content"
                style="@style/TextVIew.black.13"
                android:layout_below="@+id/txt_title"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/txt_date"
                style="@style/TextVIew.black.13"
                android:layout_below="@+id/txt_content"
                android:textSize="@dimen/font_12" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <View
                android:layout_width="@dimen/size_18"
                android:layout_height="@dimen/size_18"
                android:layout_gravity="center_vertical"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/img_menu"
                android:layout_width="@dimen/size_44"
                android:layout_height="@dimen/size_44"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:padding="@dimen/size_11"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_option_blue_24" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginEnd="@dimen/size_18"
        android:layout_marginLeft="@dimen/size_68"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginStart="@dimen/size_68"
        android:background="@color/text_blue" />
</LinearLayout>