<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xtelsolution.xmec.view.activity.login.SlideViewActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_60"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="@dimen/size_6"
            app:tabPaddingStart="@dimen/size_6" />

        <Button
            android:id="@+id/btn_phone_login"
            style="@style/Button.white.SlideView"
            android:background="@drawable/button_slide_view_1"
            android:text="@string/layout_sv_login_by_phone" />

        <TextView
            android:id="@+id/tv_lates"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_36"
            android:gravity="center"
            android:text="Để sau"
            android:textColor="@color/white_100"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_8"/>
    </LinearLayout>
</RelativeLayout>